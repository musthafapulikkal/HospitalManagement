<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".Activity.Activity.ViewapproveHospitalActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:text="New Requests"
        android:textColor="@color/white"
        android:id="@+id/id_new_requests"
        android:layout_marginTop="100dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_new_requests"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:id="@+id/id_active_hospitals"
        android:background="@color/orange"
        android:text="Active Hospitals"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity.AddServicesActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:id="@+id/id_imageview_services"
        android:src="@drawable/service"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/id_btn_choose_service"
        android:layout_alignBottom="@+id/id_imageview_services"
        android:layout_alignEnd="@+id/id_imageview_services"
        android:layout_alignRight="@+id/id_imageview_services"
        android:background="#80ffffff"
        android:src="@drawable/chooseimg1"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_below="@+id/id_imageview_services"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextborder"
            android:hint="Caption"
            android:paddingLeft="8dp"
            android:id="@+id/id_serv_caption"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittextborder"
            android:hint="Description"
            android:id="@+id/id_serv_description"
            android:paddingLeft="8dp"
            android:textAlignment="textStart"
            android:gravity="start" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Add"
            android:id="@+id/id_btn_add_service"
            android:background="@color/red"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>
</ScrollView>
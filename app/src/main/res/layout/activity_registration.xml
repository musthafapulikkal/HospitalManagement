<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/hostwo"
    tools:context=".Activity.Activity.RegistrationActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="@color/lightblues"
        android:hint="User name"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:id="@+id/id_reg_username"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="160dp"
        android:background="@color/lightblues"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:id="@+id/id_reg_useremail"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="220dp"
        android:background="@color/lightblues"
        android:hint="Contact"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:id="@+id/id_reg_usercontact"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="280dp"
        android:background="@color/lightblues"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:id="@+id/id_reg_user_password"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="340dp"
        android:background="@color/lightblues"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:paddingLeft="8dp"
        android:textColor="@color/white"
        android:id="@+id/id_reg_user_confirm"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:background="@color/orange"
        android:id="@+id/id_btn_register"
        android:textColor="@color/white"
        android:layout_below="@+id/id_reg_user_confirm"
        android:layout_marginTop="40dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Signin"
        android:background="@color/orange"
        android:layout_marginLeft="210dp"
        android:textColor="@color/white"
        android:id="@+id/id_btn_gotologin"
        android:layout_below="@+id/id_reg_user_confirm"
        android:layout_marginTop="40dp"/>
</RelativeLayout>